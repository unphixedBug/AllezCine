{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./assets/js",
    "rootDir": "./assets/js"
  },
  "include": ["assets/js/**/*"],
  "exclude": ["node_modules"]
}
